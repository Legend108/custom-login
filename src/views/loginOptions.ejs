<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="<%= favicon %>">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://kit.fontawesome.com/a63785aca4.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="http://localhost:3001/assets/all.css">
    <title>
        <%= name %>
    </title>
</head>

<body>
    <%- include("./partials/onlyNav.ejs") %>

        <div style="display: grid; place-items: center; margin-top: 20vh;">
            <form action="/create/account" method="post">
                <h3 style="margin-left: 2vh; margin-bottom: 3vh;">Create an account</h3>
                <div class="search">
                    <input name="username" type="text" placeholder="Username" class="srch_fild"
                        style="border-bottom: 2px solid black;" required>
                    <input name="email" type="email" placeholder="Email" class="srch_fild"
                        style="border-bottom: 2px solid black; margin-top: 2vh;" required>
                    <input name="password" type="password" placeholder="Password" id="passinput" class="srch_fild"
                        style="border-bottom: 2px solid black; margin-top: 2vh;" required>
                    <input class="form-check-input" type="checkbox" value="" id="passbox"> Show
                </div>
                <button type="submit" class="btn btn-success" style="margin-top: 3vh;">Create</button>
            </form>

            <div class="social_nav" style="margin-top: 6vh; margin-right: 10vh;">
                <span class="titles" style="font-size: 15px;">Or Login With</span>
                <ul>
                    <li><a class="dc" style="" href="/auth/google"><i class="fa fa-google"></i></a></li>
                </ul>
            </div>
        </div>
        <script src="https://code.jquery.com/jquery-3.6.0.js"
            integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
        <script>
            $('.nav-icn').on('click', function () {
                $('.navigation').addClass('navigation-show');
                $('.modal-shade').addClass('modal-shade-show');
            });

            $('.modal-shade').on('click', function () {
                $('.navigation').removeClass('navigation-show');
                $('.modal-shade').removeClass('modal-shade-show');
            });
            
            const passinput = document.getElementById("passinput");
            const passbox = document.getElementById("passbox");

            passbox.addEventListener("click", () => {
                if(passbox.checked == true) {
                    passinput.type='text';
                    passbox.checked=true;
                } else {
                    passinput.type='password';
                    passbox.checked=false;
                }
            });
            
        </script>
</body>

</html>